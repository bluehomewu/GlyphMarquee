<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editor_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- 文字輸入框 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMarqueeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_marquee_text"
            android:singleLine="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 速度控制 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed_label"
        android:layout_marginTop="24dp"
        android:layout_gravity="start"/>

    <SeekBar
        android:id="@+id/sbSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="200"
        android:min="10"
        android:progress="100"/>

    <TextView
        android:id="@+id/tvSpeedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_speed_value"
        android:layout_gravity="end"/>

    <!-- =========================== -->
    <!-- 新增：亮度控制 -->
    <!-- =========================== -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brightness_label"
        android:layout_marginTop="16dp"
        android:layout_gravity="start"/>

    <SeekBar
        android:id="@+id/sbBrightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="255"
        android:min="1"
        android:progress="255"/>

    <TextView
        android:id="@+id/tvBrightnessValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_brightness_value"
        android:layout_gravity="end"/>
    <!-- =========================== -->

    <!-- 套用按鈕 -->
    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_apply"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warning_text"
        android:gravity="center"
        android:textColor="#888888"
        android:layout_marginTop="16dp"/>

</LinearLayout>